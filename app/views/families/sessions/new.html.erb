<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>サインインページ</title>

  <!-- CSSの設定ファイル -->
  <link rel="stylesheet/family" href="sign-in.css">
</head>

<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto">
    <%= form_with model: @family, url: new_family_session_path, id: "new_family" , class: "text-center" ,  local: true do |f| %>

      <%= link_to image_tag("logo_set.png", class: :logo), root_path %>
     <h1 class="h3 mb-3 fw-normal">sign in</h1>
      <%= render "families/shared/error_messages", resource: resource %>

      <div class="form-floating">
        <%= f.email_field :email , class: "form-control" , id: "floatingInput" %>
        <%= f.label :email %>
      </div>
      <div class="form-floating">
      <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password,  class: "form-control" , id: "floatingPassword" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-check text-start my-3">
        <%= f.check_box :remember_me ,for: "flexCheckDefault"%>
        <%= f.label :remenber_me , class: "form-check-label" %>
      <% end %>
      </div>
      <%= f.submit "サインイン", class: "btn btn-primary w-100 py-2" %>
      <p class="mt-5 mb-3 text-body-secondary">&copy; 2017-2023</p>
  <% end %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>

</html>