            </svg>
            <%#= task.task_price %>ポイント<br><%#= task.task_shipping_fee_status.name %>
            </span>
            <div class='star-btn'>
              <%# image_tag "star.png", class:"star-icon" %>
            </div>
          </div>
        </div>
        <%# end %>
      </li>
      <%# end %>
<%= render "shared/footer" %>