<div class="task">
  <div class="upper-task">

    <div class="task-name">
      <%= link_to task.taskname , family_user_tasks_path(family_id: @user.family_id, user_id: @user.id ,tasks_id: task.id) %>
    </div>

    <div class="task-offer-date">
      <div>頼んだ日：
        <%= task.created_at %>
      </div>
    </div>

    <div class="task-done-date">
      <% if task.updated_at != task.created_at%>
        <div>完了日：
          <%= task.updated_at %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="lower-task">
    <div class="task-schedule">
      <div>スケジュール：
        <%= task.schedule.name %>
      </div>
    </div>
  </div>



</div>