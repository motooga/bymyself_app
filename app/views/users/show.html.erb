<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
        </tbody>
      </table>
      
      <%# 仕事一覧 %>
      <%= render partial: 'task', collection: @tasks.select { |task| [0, 1].include?(task.status_id)} %>

      <% if family_signed_in? %>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= link_to "お手伝いを頼む", new_family_user_task_path(family_id: @user.family_id, user_id: @user.id ), class: "btn btn-outline-dark" %>
        </div>
      <% end %>
          

      
      <%= link_to 'トップページ', root_path %>



    </div>
  </div>
</div>

